package com.revature.model;

import java.util.Collection;
import java.util.Iterator;
import java.util.List;
import java.util.ListIterator;

public class PLinkedList<T> implements List {
	
	private PLinkedListNode<T> first;
	private PLinkedListNode<T> last;
	private int size;
	
	public boolean add(Object arg0) {
		if(arg0.getClass() != PLinkedListNode.class) {
			throw new IllegalArgumentException("Objects added to PLinkedList must be PLinkedListNode objects");
		}
		else if(first == null) {
			first = (PLinkedListNode<T>) arg0;
			last = (PLinkedListNode<T>) arg0;
			return true;
		}
		else {
			PLinkedListNode<T> currentNode = first;
			last.setNext((PLinkedListNode<T>) arg0);
			last = last.getNext();
			return true;
		}
	}

	public void add(int arg0, Object arg1) {
		// TODO Auto-generated method stub
		if(arg1.getClass() != PLinkedListNode.class) {
			throw new IllegalArgumentException("Objects added to PLinkedList must be PLinkedListNode objects");
		}
		if(arg0 < 0 || arg0 > size) {
			throw new IndexOutOfBoundsException(""+arg0);
		}
		else if(size == 0) {
			add(arg1);
		}
	}

	public boolean addAll(Collection arg0) {
		// TODO Auto-generated method stub
		return false;
	}

	public boolean addAll(int arg0, Collection arg1) {
		// TODO Auto-generated method stub
