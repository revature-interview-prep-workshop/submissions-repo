package com.revature.model;

public class PStack<T> {
	PStackNode<T> top;
	int size;
	
	public PStack() {
		top = null;
	}
	
	public void push(T o) {
		System.out.println("BEGIN PUSH");
		PStackNode<T> newNode = new PStackNode<T>(o);
		System.out.println("NEW NODE CREATED");
		newNode.below = top;
		System.out.println("BELOW POINTER SET");
		top = newNode;
		System.out.println("TOP DECLARED");
		size++;
	}
	
	public T pop() throws Exception {
		if(size == 0) {
			throw new Exception("Cannot pop from an empty stack");
		}
		PStackNode<T> toReturn = top;
		top = top.below;
		size--;
		return toReturn.value;
	}
	
	public boolean isEmpty() {
		return size == 0;
	}
	
	public int getSize() {
		return size;
	}
	
	public String toString() {
		String out = "PStack[";
		PStackNode<T> currentNode = top;
		while(currentNode != null) {
			out += currentNode.value;
			if(currentNode.below != null) {
				out += ", ";
			}
		}
		out += "]";
		return out;
	}
}
